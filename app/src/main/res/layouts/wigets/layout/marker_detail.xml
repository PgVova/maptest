<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="35dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_marginTop="24dp"
        android:rotation="45"
        android:layout_marginLeft="40dp"
        android:background="@color/colorMarkerBg"
        android:layout_width="10dp"
        android:layout_height="10dp"/>

    <LinearLayout
        android:background="@drawable/marker_detail_bg"
        android:orientation="horizontal"
        android:layout_width="170dp"
        android:layout_height="30dp">

        <FrameLayout
            android:background="@drawable/icon_bg"
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/marker_detail_logo"
                app:srcCompat="@drawable/layer2"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <RelativeLayout
            android:paddingLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorPrimaryWhite"
                android:id="@+id/marker_detail_address"
                android:textSize="8sp"
                android:text="ул. Садовническая,57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"

                android:textColor="@color/colorPrimaryWhite"
                android:layout_below="@+id/marker_detail_address"
                android:textSize="10sp"
                android:text="35#"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <android.support.v7.widget.AppCompatImageView
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/marker_detail_direction"
                app:srcCompat="@drawable/direction"
                android:padding="3dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:layout_toLeftOf="@+id/marker_detail_direction"
                android:id="@+id/marker_detail_like"
                app:srcCompat="@drawable/like"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>